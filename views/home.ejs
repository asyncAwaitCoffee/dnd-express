<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DND List - Главная</title>
    <link rel="icon" type="image/x-icon" href="/images/fav_icon.ico">
    <link rel="stylesheet" href="/styles/home.css">
    <link rel="stylesheet" href="/styles/common.css">
    <link href="https://fonts.cdnfonts.com/css/beautiful-magic" rel="stylesheet">                
</head>
<body>

    <%- include('partials/header'); -%>

    <section id="home">
        <div class="step-text" id="step_1">
            <h1>M</h1>
            <h3>Manage character's spells, skills and inventory</h3>
        </div>
        <div class="step-img" id="step_2"></div>
        <div class="step-text" id="step_3">
            <h1>A</h1>
            <h3>Add custom features and items</h3>
        </div>
        <div class="step-img" id="step_4"></div>
        <div class="step-text" id="step_5">
            <h1>G</h1>
            <h3>Gather with other adventurers</h3>
        </div>
        <div class="step-img" id="step_6"></div>
        <div class="step-text" id="step_7">
            <h1>I</h1>
            <h3>Investigate mysteries woven by your GM</h3>
        </div>
        <div class="step-img" id="step_8"></div>
        <div class="step-text" id="step_9">
            <h1>C</h1>
            <h3>Create unforgettable adventures</h3>
        </div>
        <div class="step-img" id="step_10"></div>
    </section>

    <script>
        const steps = [...document.getElementsByClassName("step-text"), ...document.getElementsByClassName("step-img")]

        for (const step of steps) {
            const x = 500 * (Math.random() > 0.5 ? -1 : 1)
            const y = 500 * (Math.random() > 0.5 ? -1 : 1)
            step.style.transform = `translate(${x}%, ${y}%) rotate(${360 * Math.random() * (Math.random() > 0.5 ? -1 : 1)}deg)`
        }


        window.onload = () => {
            
            for (const step of steps) {
                step.style.transitionDelay = `${Math.random()}s`
                step.classList.add("back")
            }
        }
    </script>

    <%- include('partials/footer'); -%>

</body>
</html>
